mixin top-post(type, options)
	.col-xs-12.col-md-12.col-lg-6.content-block
		.inner-content
			h4.section-title(data-toggle="tooltip" data-trigger="click hover" data-placement="right" title=tooltip.top_post)
				=sectionTitles.top_post
			section.top-posts.top-post#top_post(data-admin-options=options)
				article.post
					h3.post-title: a
					p.post-content
					span.post-creation 4-20-2348
					a.post-link: span.entypo.entypo-chevron-right
				section.post-image: img
				section.post-details
					h3.post-title-details Details
					ul.post-details-list



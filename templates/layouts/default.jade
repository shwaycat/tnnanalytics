include ../mixins/flash-messages
include ../mixins/auth/auth-forms

include ../mixins/global/side-navigation

html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    title= title || site.brand

    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
    link(href='http://fonts.googleapis.com/css?family=Istok+Web:400,700,400italic,700italic' rel='stylesheet' type='text/css')
    link(href="/styles/site.min.css", rel="stylesheet")

    block css
    block head
  body(class=section)
    .container-fluid.header-container
      header
        .row
          .col-xs-12.col-sm-6
            a(href="/" title="Cadence Home")
              img(src="" alt="Cadence Logo")
            if user
              if user.canAccessKeystone
                li: a(href='/keystone') Open Keystone
              li: a(href='/me').user.hidden-xs
                img(src=(user.avatarUrl || '/images/avatar.png'), width=27).img-circle
                =' ' +user.name.first
              li: a(href='/signout')
                span.visible-xs Sign out
                span.entypo.entypo-large.entypo-logout.hidden-xs
            else
              li: a(href='/signin', data-from=page.path, data-initial='signin').js-auth-trigger Sign in

    .container-fluid.main-container
      main
        .row
          .col-xs-12.col-md-4.col-lg-3
            +side-navigation
          .col-xs-12.col-md-8.col-lg-9.content
            .row
              a(href='#').warning-block.col-xs-12.col-lg-9
                .warning-count
                  span 01
                .warning-message
                  p New Adverse Events(s)
                  span Go there now

            block content
  
    .container-fluid.footer-container
      footer
        p &copy; Team Novo Nordisk | 
          a(href="/privacy" title="Privacy Policy") Privacy Policy
        ul
          each link in footerLinks
            if link.type == 'social'
              li: a(href=link.href title=link.label)
                .footer-icon
                  .entypo-social(class="entypo-"+link.key)

    if !user
      #modal-auth(tabindex="-1", role="dialog", aria-labelledby="signin", aria-hidden="true").modal.fade
        .modal-dialog
          .modal-content
            +auth-forms({ modal: true, initial: 'signin' })

    script(src='/js/lib/jquery/jquery-2.1.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js')
    script(src='/js/lib/bootstrap/bootstrap-3.2.0.min.js')

    //- TODO Put this in a block JS section for the pages its needed on.
    script(src='/js/ui.js')

    include shared/analytics

    block js